# Cursor MCP Business Automation Platform - Environment Configuration
# Copy this file to .env and configure your values

# ================================
# CORE PLATFORM SETTINGS
# ================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
PLATFORM_NAME="Cursor MCP Business Automation Platform"

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=sqlite:./data/platform.db
REDIS_URL=redis://localhost:6379

# ================================
# SECURITY & AUTHENTICATION
# ================================
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
API_KEY_ENCRYPTION_KEY=your-encryption-key-for-api-keys-32-chars
SESSION_SECRET=your-session-secret-key-here

# ================================
# AI MODEL CONFIGURATIONS
# ================================

# Claude (Primary AI Model)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI (Backup & Specialized Tasks)
OPENAI_API_KEY=your-openai-api-key-here

# Minimax (Video Generation)
MINIMAX_API_KEY=your-minimax-api-key-here

# Stable Diffusion
STABILITY_API_KEY=your-stability-api-key-here

# Midjourney
MIDJOURNEY_API_KEY=your-midjourney-api-key-here

# Runway ML
RUNWAY_API_KEY=your-runway-api-key-here

# ================================
# BUSINESS INTEGRATION APIS
# ================================

# Communication Platforms
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
DISCORD_BOT_TOKEN=your-discord-bot-token
TEAMS_APP_ID=your-teams-app-id
TEAMS_APP_PASSWORD=your-teams-app-password

# CRM Platforms
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key
PIPEDRIVE_API_TOKEN=your-pipedrive-api-token

# Project Management
NOTION_API_KEY=your-notion-integration-token
AIRTABLE_API_KEY=your-airtable-api-key
CLICKUP_API_TOKEN=your-clickup-api-token
ASANA_ACCESS_TOKEN=your-asana-access-token

# E-commerce Platforms
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
WOOCOMMERCE_API_KEY=your-woocommerce-key
WOOCOMMERCE_API_SECRET=your-woocommerce-secret
MAGENTO_API_TOKEN=your-magento-api-token

# Marketing Platforms
MAILCHIMP_API_KEY=your-mailchimp-api-key
CONVERTKIT_API_SECRET=your-convertkit-api-secret
ACTIVECAMPAIGN_API_KEY=your-activecampaign-api-key
ACTIVECAMPAIGN_API_URL=your-activecampaign-url

# Financial Platforms
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Development & Design
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-pat
GITLAB_ACCESS_TOKEN=your-gitlab-token
VERCEL_API_TOKEN=your-vercel-token
FIGMA_ACCESS_TOKEN=your-figma-token

# ================================
# WEB AUTOMATION & SCRAPING
# ================================
PLAYWRIGHT_HEADLESS=true
FIRECRAWL_API_KEY=your-firecrawl-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# ================================
# SEO & ANALYTICS
# ================================
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# ================================
# EMAIL & NOTIFICATIONS
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cursor-mcp-platform.com

# ================================
# WEBHOOK & EXTERNAL SERVICES
# ================================
WEBHOOK_SECRET=your-webhook-secret-key
EXTERNAL_API_BASE_URL=https://api.cursor-mcp-platform.com

# ================================
# MONITORING & LOGGING
# ================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-for-error-tracking
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ================================
# FEATURE FLAGS
# ================================
ENABLE_AI_OPTIMIZATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_MOBILE_API=true
ENABLE_ENTERPRISE_FEATURES=false

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_PER_HOUR=1000

# ================================
# DEPLOYMENT SETTINGS
# ================================
DOCKER_REGISTRY=your-docker-registry-url
HEALTH_CHECK_INTERVAL=30000
GRACEFUL_SHUTDOWN_TIMEOUT=30000

# ================================
# BUSINESS SETTINGS
# ================================
SUBSCRIPTION_STARTER_PRICE=2500
SUBSCRIPTION_PROFESSIONAL_PRICE=10000
SUBSCRIPTION_ENTERPRISE_PRICE=50000
DEFAULT_AUTOMATION_TIMEOUT=300000
MAX_AUTOMATIONS_PER_USER=100

# ================================
# DEVELOPMENT ONLY
# ================================
DEBUG_MODE=false
MOCK_AI_RESPONSES=false
DISABLE_AUTH_IN_DEV=false
ENABLE_API_DOCS=true