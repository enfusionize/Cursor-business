{
  "accessibility": {
    "enabled": true,
    "wcag_level": "AA",
    "features": {
      "high_contrast": true,
      "keyboard_navigation": true,
      "screen_reader": true,
      "focus_indicators": true,
      "skip_links": true
    }
  },
  "color_contrast": {
    "minimum_ratio": 4.5,
    "large_text_ratio": 3.0,
    "check_enabled": true
  },
  "font_settings": {
    "minimum_size": 14,
    "scalable": true,
    "readable_fonts": ["Arial", "Helvetica", "Verdana", "Open Sans"]
  },
  "keyboard_navigation": {
    "tab_order": true,
    "escape_key": true,
    "arrow_keys": true,
    "enter_activation": true
  },
  "screen_reader": {
    "aria_labels": true,
    "alt_text": true,
    "heading_structure": true,
    "landmark_roles": true
  },
  "responsive_design": {
    "mobile_friendly": true,
    "touch_targets": {
      "minimum_size": 44,
      "spacing": 8
    },
    "zoom_support": true
  },
  "testing": {
    "automated_checks": true,
    "tools": ["axe-core", "lighthouse"],
    "report_generation": true
  }
}